public static void main(String[] args) {
	//Print out numbers in exponents of 2 (1, 2, 4, 8, 16) until you hit 20.
	int whileCount = 1;

	while(whileCount &lt; 20) {
		System.out.println(whileCount);
		whileCount *= 2;
	}
	
	System.out.println();
	
	headWhile(1);
	
	System.out.println();
	
	tailWhile(1);
	
	System.out.println();

	//Print out 10 descending numbers going from 10 to 1.
	for(int forCount = 10; forCount &gt; 0; forCount--) {
		System.out.println(forCount);
	}
	
	System.out.println();
	
	headFor(10);
	
	System.out.println();
	
	tailFor(1);
}
	
public static void headWhile(int cnt) {
	if(cnt &lt; 20) {
		System.out.println(cnt);
		headWhile(cnt * 2);
	}
}

public static int tailWhile(int cnt) {
	if(cnt &gt;= 20) return 1;
	else {
		int ret = tailWhile(cnt * 2);
		System.out.println(ret);
		return ret * 2;
	}
}

public static void headFor(int cnt) {
	if(cnt &gt; 0) {
		System.out.println(cnt);
		headFor(cnt - 1);
	}
}

public static void tailFor(int cnt) {
	if(cnt &lt;= 10) {
		tailFor(cnt + 1);
		System.out.println(cnt);
	}
}
