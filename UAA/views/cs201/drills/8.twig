//Print out numbers in exponents of 2 (1, 2, 4, 8, 16) until you hit 20.
int whileCount = 1;

while(whileCount &lt; 20) {
	System.out.println(whileCount);
	whileCount *= 2;
}

System.out.println();

//Print out 10 descending numbers going from 10 to 1.
for(int forCount = 10; forCount &gt; 0; forCount--) {
	System.out.println(forCount);
}
</pre>

